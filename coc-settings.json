{
  "languageserver": {
    // npm i -g vim-language-server vscode-json-languageservice typescript-language-server svelte-language-server dockerfile-language-server-nodejs bash-language-server 
    "vimls": {
      "command": "vim-language-server",
      "args": ["--stdio"],
      "initializationOptions": {
        "vimruntime": "",
        "runtimepath": "",
        "diagnostic": {
          "enable": true
        },
        "indexes": {
          "runtimepath": true,
          "gap": 100,
          "count": 3,
          "projectRootPatterns" : ["strange-root-pattern", ".git", "autoload", "plugin"]
        },
        "suggest": {
          "fromVimruntime": true,
          "fromRuntimepath": false
        }
      },
      "filetypes": [ "vim" ]
    },
    "json": {
      "enable": false,
      "command": "vscode-json-languageserver",
      "args": ["--stdio"],
      "filetypes": ["json"],
      "trace.server": "verbose"
    },
    "typescript": {
      "enable": false,
      "command": "typescript-language-server",
      "args": [
        "--stdio"
        //"--tsserver-log-file=/tmp/ts-lsp-logs.txt",
        //"--tsserver-log-verbosity=verbose",
        //"--log-level=4"
      ],
      "filetypes": [
        "typescript",
        "javascript"
      ],
      "trace.server": "verbose",
      "initializationOptions": {
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"],
      "trace.server": "verbose"
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"],
      "trace.server": "verbose"
    },
    "svelte": {
      "command": "bash",
      "filetypes": ["svelte"],
      "args": [
        "-c",
        "svelteserver --stdio"
        //"svelteserver --stdio | tee -a /tmp/svelte-lsp-logs.txt"
      ],
      "trace.server": "verbose",
      "initializationOptions": {
        "configuration": {
          "svelte": {
            "plugin": {
              "typescript": {
                "enable": true
              }
            }
          }
        }
      }
    }
  }
}
